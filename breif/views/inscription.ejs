    <aside>
      <div class="blank"></div>
      <form action="/inscription" method="POST" class="form-message">
        <label for="name">Nom</label>
        <input
          type="text"
          name="name"
          id="name"
          class="form-message-input"
          placeholder="écrire votre nom"
        />
        <label for="cin">C.I.N</label>
        <input
          type="text"
          name="cin"
          id="cin"
          class="form-message-input"
          placeholder="écrire votre cin"
        />
        <label for="email">E-Mail</label>
        <input
          type="text"
          name="email"
          id="email"
          class="form-message-input"
          placeholder="écrire votre email"
        />
        <label for="Mot de passe">Mot de passe</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-message-input"
          placeholder="écrire votre mot de passe"
        />
        <label for="confirm-password">Confirmation de mot de passe</label>
        <input
          type="password"
          name="confirm-password"
          id="confirm-password"
          class="form-message-input"
          placeholder="confirmer votre mot de passe"
        />
        <div class="blank"></div>
        <button type="submit" class="btn btn-registre">Envoyer</button>
      </form>
